[options]

# Suppress built-in key bindings, and specify them explicitly in this
# config file.
suppress_default_binds = true

[aliases]
# Define aliases here. Any arguments passed to an alias are appended to the
# command.
# alias = command to run

[binds]
q = quit
h = exec setsid -f alacritty -e sh -c 'clear && cat ${XDG_CONFIG_HOME:-$HOME/.config}/imv/help; exec $SHELL'

# Image navigation
n = next
p = prev
gg = goto 1
<Shift+G> = goto -1

# Zooming
<Shift+plus> = zoom 1
<minus> = zoom -1

# Rotate Clockwise by 90 degrees
<Ctrl+r> = rotate by 90

# Other commands
x = close
f = fullscreen
d = overlay
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1
